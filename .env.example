# KSA Lipa Mdogo Environment Configuration
# Copy this to .env and fill in your actual values
# NEVER commit .env to git â€” it contains secrets

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# M-Pesa Sandbox/Live Credentials
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASSKEY=your_passkey
MPESA_SHORTCODE=174379

# Environment: 'sandbox' or 'live'
ENV=sandbox

# Callback URL (must be publicly HTTPS reachable)
# Example: https://ja-siri.onrender.com/callback.php
CALLBACK_URL=https://ja-siri.onrender.com/callback.php

# Database Configuration (Aiven MySQL or local)
DATABASE_URL=mysql://user:pass@host:port/dbname?ssl-mode=REQUIRED
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ksa_shop
DB_USER=root
DB_PASS=
DB_SSL_MODE=REQUIRED
DB_SSL_CA_PATH=

# Optional: for development only
DEBUG=false
